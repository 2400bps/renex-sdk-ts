{
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": "src",
    "noImplicitAny": true,
    "lib": [
      "es2015",
      "es2017"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "target": "esnext",
    "module": "commonjs",
    "declaration": true,
    "declarationDir": "./types",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDirs": ["./src", "./test"],
    "strictPropertyInitialization": false,
    "noUnusedLocals": false,
    "moduleResolution": "node",
  },
  "include": [
    "./src/**/*",
    "./src/global.d.ts",
    "node_modules/@types"
  ],
  "exclude": []
}