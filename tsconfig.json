{
    "compilerOptions": {
        "paths": {
            "@ABIs/*": [
                "contracts/ABIs/*"
            ],
            "@Bindings/*": [
                "contracts/bindings/*"
            ],
        },
        "baseUrl": "src",
        "rootDir": "./",
        "moduleResolution": "node",
        "outDir": "./dist/",
        "noImplicitAny": true,
        "lib": [
            "es2015",
            "es2017"
        ],
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "resolveJsonModule": true,
        "target": "es6"
    }
}